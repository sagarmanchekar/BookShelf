//         </div>
//     )
// }

class App extends React.Component {
    
    yourMethodHere() {
        
    }
    
    render() {													//imp render is method now
        return (
            <div>
                <h1>{this.props.whatever}</h1>						///imp always use this.props now onwards.
            </div>
        )
    }
}

export default App


